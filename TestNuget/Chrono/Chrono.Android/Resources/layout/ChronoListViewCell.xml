<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/timePeriod"
        android:orientation="vertical"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|top"
            android:layout_gravity="center"
            android:text="10:00"/>
        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="center"
            android:text="20:00"/>
    </LinearLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:id="@+id/hasConflict"
        android:background="@color/chrono_conflict_orange" 
        android:layout_alignParentRight="true" />
    <View
        android:id="@+id/timeDelimiter"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/chrono_delimiter_gray" 
        android:layout_toEndOf="@id/timePeriod"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/title"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_toLeftOf="@id/hasConflict"
        android:layout_toRightOf="@id/timeDelimiter"
        android:textSize="16sp"
        android:lines="2"
        android:ellipsize="end"
        android:text="Title\nSub_Title_long long long "
        android:textColor="@android:color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/chrono_delimiter_gray" 
        android:layout_alignParentBottom="true" />
</RelativeLayout>
