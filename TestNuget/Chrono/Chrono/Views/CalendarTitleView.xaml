<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:widgets="clr-namespace:Widgets;assembly=Widgets"
             xmlns:utils="clr-namespace:Utilities;assembly=Utilities"
             x:Class="Chrono.CalendarTitleView">
    <ContentView.Content>
        <Grid BackgroundColor="Transparent"
              ColumnDefinitions="1*, 1*">
            <Label
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Grid.Column="0"
                TextTransform="Uppercase"
                FontSize="Medium"
                FontAttributes="Bold"
                TextColor="{Binding Source = {x:Static widgets:NIQThemeController.Theme}, Path=OnPrimary}"
                Text="Custom Activity">
            </Label>
        </Grid>
    </ContentView.Content>
</ContentView>